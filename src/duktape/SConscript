Import('*')
env = env.Clone()

env.Append(CPPDEFINES = ['DUK_OPT_CPP_EXCEPTIONS'])
env.Append(CCFLAGS = ['-Wno-unused-function'])

# Install headers
copy = env.Install(dir = '#/include', source = Glob('*.h'))

# Bulid library
lib = env.Library('#/lib/duktape', Glob('*.cpp'))
Depends(lib, copy)

Return('lib')
