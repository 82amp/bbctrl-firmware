table.axes
  border-collapse collapse

  td, th
    border 1px solid black
    text-align center

  .axis
    .name
      font-size 24pt


.gauge
  position relative

  span
    font-weight bold
    color #000
    text-shadow 0 0 2px #fff
    font-size 20pt
    text-align center
    position absolute
    left 0
    right 0
    top 75px
